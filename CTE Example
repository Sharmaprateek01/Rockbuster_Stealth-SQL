# Here is a SQL query with a common table expression to find the average amount paid by the top 5 customers:

WITH category_name_cte (customer_id, first_name, last_name, city, country)
AS
(SELECT A.customer_id, A.first_name, A.last_name, C.city, D.country, SUM(amount) AS amount_paid
FROM Customer A
INNER JOIN address B ON A.address_id= B.address_id
INNER JOIN city C ON B.city_id= C.city_id
INNER JOIN country D ON C.country_id= D.country_id
INNER JOIN payment E ON A.customer_id=E.customer_id
WHERE C.city IN (SELECT C.city
FROM customer A
JOIN address B ON A.address_id= B.address_id INNER JOIN city C ON B.city_id= C.city_id
INNER JOIN country D ON C.country_id= D.country_id GROUP BY C.city, country
ORDER BY COUNT (customer_id)DESC
LIMIT 5)
GROUP BY A.customer_id, A.first_name, A.last_name, D.country, C.city ORDER BY amount_paid DESC
LIMIT 5)
SELECT AVG(amount_paid) AS avg_amount_paid
FROM category_name_cte

# Here is a SQL query with a common table expression to find out how many of the top 5 customers you identified above are based within each country:

WITH top5_customers_cte (customer_id, first_name, last_name, city, country)
AS
(SELECT A.customer_id, A.first_name, A.last_name, C.city, D.country, SUM(amount) AS amount_paid
FROM Customer A
 
INNER JOIN address B ON A.address_id= B.address_id INNER JOIN city C ON B.city_id= C.city_id
INNER JOIN country D ON C.country_id= D.country_id INNER JOIN payment E ON A.customer_id=E.customer_id WHERE C.city IN (SELECT C.city
FROM customer A
INNER JOIN address B ON A.address_id=B.address_id INNER JOIN city C ON B.city_id= C.city_id
INNER JOIN country D ON C.country_id= D.country_id GROUP BY C.city, country
ORDER BY COUNT (customer_id)DESC
LIMIT 5)
GROUP BY A.customer_id, A.first_name, A.last_name, D.country, C.city ORDER BY amount_paid DESC
LIMIT 5)
SELECT D.country,
COUNT(DISTINCT A.customer_id) AS all_customer_count, COUNT(top5_customers_cte) AS top_customer_count FROM Customer A
INNER JOIN address B ON A.address_id= B.address_id INNER JOIN city C ON B.city_id= C.city_id
INNER JOIN country D ON C.country_id= D.country_id LEFT JOIN top5_customers_cte ON A.customer_id=top5_customers_cte.customer_id
GROUP BY D.country
ORDER BY all_customer_count DESC LIMIT 5;
